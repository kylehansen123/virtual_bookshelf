<div class="page-header">
  <h1>Edit Author #<%= @author.id %></h1>
</div>

<% if @author.errors.any? %>
  <% @author.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_author/<%= @author.id %>" class="form-horizontal">
  <!-- Label and input for author_id -->
  <div class="form-group">
    <label for="author_id" class="col-sm-2 control-label">
      Author
    </label>
    <div class="col-sm-10">
      <input type="text" id="author_id" name="author_id" placeholder="Author" class="form-control" value="<%= @author.author_id %>">
    </div>
  </div>

  <!-- Label and input for author_name -->
  <div class="form-group">
    <label for="author_name" class="col-sm-2 control-label">
      Author name
    </label>
    <div class="col-sm-10">
      <input type="text" id="author_name" name="author_name" placeholder="Author name" class="form-control" value="<%= @author.author_name %>">
    </div>
  </div>

  <!-- Label and input for author_nationality -->
  <div class="form-group">
    <label for="author_nationality" class="col-sm-2 control-label">
      Author nationality
    </label>
    <div class="col-sm-10">
      <input type="text" id="author_nationality" name="author_nationality" placeholder="Author nationality" class="form-control" value="<%= @author.author_nationality %>">
    </div>
  </div>

  <!-- Label and input for author_birth_year -->
  <div class="form-group">
    <label for="author_birth_year" class="col-sm-2 control-label">
      Author birth year
    </label>
    <div class="col-sm-10">
      <input type="text" id="author_birth_year" name="author_birth_year" placeholder="Author birth year" class="form-control" value="<%= @author.author_birth_year %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Author" class="btn btn-primary">
    </div>
  </div>
</form>
