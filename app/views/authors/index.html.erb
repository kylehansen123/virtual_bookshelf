<div class="page-header">
  <h1>Authors</h1>
</div>

<p><a href="/authors/new" class="btn btn-primary">Add a New Author</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Author</th>
      <th>Author name</th>
      <th>Author nationality</th>
      <th>Author birth year</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.author_id %></td>
        <td><%= author.author_name %></td>
        <td><%= author.author_nationality %></td>
        <td><%= author.author_birth_year %></td>
        <td>
          <a href="/authors/<%= author.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/authors/<%= author.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_author/<%= author.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

